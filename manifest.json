{
  "name": "SD Companion",
  "version": "1.0",
  "description": "Makes the Space Destiny UI smoother",
  "icons": {
    "16" : "images/16.png",
    "48" : "images/48.png",
    "64" : "images/64.png",
    "128" : "images/128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "cookies",
    "*://*.spacedestiny.com/*"
  ],
  "browser_action": {
    "default_icon": "images/32.png",
    "default_title": "Space Destiny Companion",
    "default_popup": "popup.html",
    "popup": "popup.html"
  },
  "web_accessible_resources": ["images/32.png"],
  "content_scripts": [
    {
      "matches": ["*://*.spacedestiny.com/*"],
      "js": [
        "jquery-3.3.1.min.js",
        "jquery.countdown.min.js",
        "SD-library.js",
        "utilities.js",
        "companions/fleetCompanion.js",
        "companions/messageCompanion.js",
        "companions/battleSimCompanion.js",
        "companions/ecologyCompanion.js",
        "companions/overviewCompanion.js",
        "companions/imperiumCompanion.js",
        "jquery.tabletojson.js",
        "main.js"
      ],
      "css" : ["css/companion.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version" : 2
}