{
  "name": "SD Companion",
  "version": "1.0",
  "description": "Makes the Space Destiny UI smoother",
  "icons": {
    "16" : "images/16.png",
    "48" : "images/48.png",
    "64" : "images/64.png",
    "128" : "images/128.png"
  },
  "permissions": ["tabs", "storage", "contextMenus", "*://www.spacedestiny.com/*"],
  "browser_action": {
    "default_icon": "images/32.png",
    "default_title": "Space Destiny Companion",
    "default_popup": "popup.html",
    "popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.spacedestiny.com/*/*"],
      "js": [
        "jquery-3.3.1.min.js", "SD-library.js", "utilities.js", "fleetCompanion.js", "messageCompanion.js", "battleSimCompanion.js", "ecologyCompanion.js", "overviewCompanion.js", "main.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version" : 2
}